<%= form_for(resource, as: resource_name, url: password_path(resource_name), remote: true, :authenticity_token => true, html: {id: 'forgot-body', class: 'row', method: :post}) do |f| %>
  <%#= devise_error_messages! %>

  <div class="input-field col s12">
    <%= f.email_field :email, id: 'email-restore', class: 'validate' %>
    <%= f.label :email %>
  </div>

  <div class="col s12">
    <button class="dark-btn btn waves-effect waves-light" name="button" type="submit">Send me reset password
      instructions
    </button>
  </div>

<% end %>

