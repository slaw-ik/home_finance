<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, :authenticity_token => true, html: {class: 'row'}) do |f| %>
  <div class="input-field col s12">
    <%= f.email_field :email, autofocus: false, class: 'validate' %>
    <%= f.label :email %>
  </div>

  <div class="input-field col s12">
    <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <p class="col s12">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </p>
  <% end -%>

  <div class="col s12">
    <%= f.button "Log in", class: 'dark-btn btn waves-effect waves-light' %>
  </div>
<% end %>

