<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, :authenticity_token => true, html: {class: 'col s12 card hoverable', method: :post}) do |f| %>
  <%= devise_error_messages! %>

  <h5 class="center-align">Start using home finance</h5>
  <p class="small center-align">Fill out the form to sign up</p>

  <div class="row">
    <div class="input-field col s6">
      <input id="first_name" type="text" class="validate">
      <label for="first_name">First Name</label>
    </div>
    <div class="input-field col s6">
      <input id="last_name" type="text" class="validate">
      <label for="last_name">Last Name</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, class: "validate" %>
      <%= f.label :email %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "off", class: "validate" %>
      <%= f.label :password %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate" %>
      <%= f.label :password_confirmation %>
    </div>
  </div>

  <div class="row">
    <div class="col  s12 m6 offset-m3">
      <button class="dark-btn btn waves-effect waves-light" type="submit" name="action">sign up for free
      </button>
    </div>
  </div>

<% end %>

