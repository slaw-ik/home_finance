<% error_msg = @messages[:errors] if @messages[:errors].present? %>
<% redirect_path = @messages[:redirect] if @messages[:redirect].present? %>

var error_msg = '<%= error_msg %>',
    redirect_path = '<%= redirect_path %>';

if (!_.isEmpty(error_msg)) {
  $('#user_email, #user_password').addClass('invalid').next('label').attr('data-error', error_msg);
//  $('#user_password').addClass('invalid');
  Materialize.toast(error_msg, 5000);
}
else {
  window.location = redirect_path;
}