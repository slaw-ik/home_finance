<%- map_hash = {'alert' => 'danger', 'notice' => 'success'} %>
<%- flash.each do |name, msg| -%>
  <%- if msg.is_a?(String) %>
    <div class="alert alert-<%= map_hash[name] %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <%= msg %>
    </div>
  <%- end -%>
<%- end -%>